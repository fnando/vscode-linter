{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "curly": ["error", "all"],
    "eqeqeq": "error",
    "no-throw-literal": "error",
    "semi": ["error", "always"],
    "@typescript-eslint/naming-convention": "warn",
    "@typescript-eslint/semi": "warn"
  },
  "overrides": [
    {
      "files": ["*.json"],
      "rules": {
        "semi": "off",
        "@typescript-eslint/semi": "off"
      }
    }
  ],
  "ignorePatterns": ["out", "dist"]
}
